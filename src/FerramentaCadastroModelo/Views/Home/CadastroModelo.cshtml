@model FerramentaCadastroModelo.Models.ModeloModel
@{
    ViewBag.Title = "CadastroModelo";
}

<h2>Cadastro Modelo</h2>

@using (Html.BeginForm("SalvarModelo", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="form-group">
        <div class="col-sm-10">
            Nome:
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="col-sm-10">
            Sigla:
            @Html.TextBoxFor(model => model.Sigla, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sigla)
        </div>

        <div class="col-sm-10">
            Descrição:
            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Salvar</button>
        </div>
    </div>
}