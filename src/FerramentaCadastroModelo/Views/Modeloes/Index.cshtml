@model IEnumerable<FerramentaCadastroModelo.Dominio.Modelo>

@{
    ViewBag.Title = "Modelos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Modelo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDModelo }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDModelo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDModelo })
        </td>
    </tr>
}

</table>
